<h1>Create a Viewing Party</h1>

<%= form_with url: user_movie_viewing_parties_path(@user, @movie), method: :post, local: true do |f| %>
  <%= f.label :date, "Date" %>
  <%= f.date_field :date %>

  <%= f.label :start_time, "Start Time" %>
  <%= f.time_field :start_time %>

  <%= f.label :invitees, "Invitees" %>
  <%= f.text_field :invitees %>

  <%= f.submit "Create Party", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Movie', user_movie_path(@user, @movie), class: 'btn btn-secondary' %>
