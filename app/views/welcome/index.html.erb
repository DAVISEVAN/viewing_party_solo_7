<h1>Welcome to Viewing Party!</h1>

<%= link_to 'Log In', login_path %>
<br>
<%= link_to 'Register', register_user_path %>
<br>
<%= link_to 'Home', root_path %>

<% if cookies[:location] %>
  <p>Your location: <%= cookies[:location] %></p>
<% end %>

<% if session[:user_id] %>
  <%= link_to 'Log Out', logout_path %>
  <h2>Existing Users:</h2>
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to user.name, user_path(user) %></li>
    <% end %>
  </ul>
<% else %>
  <%= link_to 'Log In', login_path %>
  <%= link_to 'Create an Account', register_user_path %>
<% end %>